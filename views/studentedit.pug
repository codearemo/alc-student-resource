extends layout

block content
    link(type='text/css', rel='stylesheet', href='/studentedit.css')
    
    body
      nav.navbar.fixed-top.navbar-expand-lg.navbar-dark.bg-dark
        a.navbar-brand(href='/') ALC College
        button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarTogglerDemo02', aria-controls='navbarTogglerDemo02', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarTogglerDemo02.collapse.navbar-collapse
          ul.navbar-nav.mr-auto.mt-2.mt-lg-0
            li.nav-item
              a.nav-link(href='/')
                | Dashboard
                span.sr-only (current)
            li.nav-item
              a.nav-link(href='/student/add') Add Student
      .container
        .col-md-4
            if errors
                div(class="alert alert-danger") #{errors[1].msg}
        .row
          .col-md-8
            h2 Edit Student Resource
            form(method="POST", action="/studentview/edit/" + student._id)
              .form-group
                label(for='firstname') Firstname
                input#firstname.form-control(placeholder='Firstname', name = "firstname", value = student.firstname, required, type="text", pattern="[a-zA-Z]+")
              .form-group
                label(for='lastname') Lastname
                input#lastname.form-control(placeholder='Lastname', name = "lastname", value = student.lastname, required, type="text", pattern="[a-zA-Z]+")
              .form-group
                label(for='mobile') Mobile
                input#mobile.form-control(placeholder='234XXXXXXXXXXX', name = "mobile",type='tel', value = student.mobile, , pattern="[0-9]{13}")
              .form-group
                label(for='dob') Date of Birth 
                #datepicker.input-group.date(data-date-format='dd-mm-yyyy')
                  input.form-control(type='date', name='dob', value = student.dob, required)
                  span.input-group-addon
                    i.fa.fa-calendar(aria-hidden='true')
              .form-group
                label(for='email') Email
                input#email.form-control(placeholder='name@domain.com', name = "email", type="email", value = student.email, required)
              .form-group
                label(for='exampleFormControlSelect1') Gender
                select#gender.form-control(name = "g", data-value = student.g)
                  option M
                  option F
              .form-group
                label Image
                small#emailHelp.form-text.text-muted Changing image will be available in latter versions
                input.form-control(type='text', placeholder='Readonly input hereâ€¦', readonly='', value = "https://ssl.prcdn.com/uk/people/default-profile.png?1406639312", name = "img")
              .form-group
                label(for='faculty') Faculty
                select#faculty.form-control(name = "faculty", data-value = student.faculty)
                  option(value='Administration') Administration
                  option(value='Arts And Humanities') Arts And Humanities
                  option(value='Education') Education
                  option(value='Engineering / Environmental Sciences') Engineering / Environmental Sciences
                  option(value='Law / Legal Studies') Law / Legal Studies
                  option(value='Medical / Health Sciences / Pharmacy') Medical / Health Sciences / Pharmacy
                  option(value='Sciences') Sciences
                  option(value='Social Sciences') Social Sciences
              .form-group
                label(for='dept') Department
                select#dept.form-control(name = "dept", data-value = student.dept)
                  if student.faculty == 'Administration'
                    option(value='Accountancy / Accounting') Accountancy / Accounting
                    option(value='Actuarial Science') Actuarial Science
                    option(value='Business Administration') Business Administration
                    option(value='Finance') Finance
                    option(value='Industrial Relations And Personnel Management') Industrial Relations And Personnel Management
                    option(value='Insurance') Insurance
                    option(value='Management') Management
                    option(value='Marketing') Marketing
                    option(value='Operations Research') Operations Research
                  else if student.faculty == 'Arts And Humanities'
                    option(value='Chinese Studies')  Chinese Studies 
                    option(value='Creative Arts / Visual Arts')  Creative Arts / Visual Arts 
                    option(value='Creative Arts / Theatre Arts')  Creative Arts / Theatre Arts 
                    option(value='Creative Arts / Music')  Creative Arts / Music 
                    option(value='English Language')  English Language 
                    option(value='English Literature')  English Literature 
                    option(value='French')  French 
                    option(value='History And Strategic Studies')  History And Strategic Studies 
                    option(value='Linguistics / Igbo')  Linguistics / Igbo 
                    option(value='Linguistics / Yoruba')  Linguistics / Yoruba 
                    option(value='Linguistics / Urhobo')  Linguistics / Urhobo 
                    option(value='Philosophy')  Philosophy 
                    option(value='Russian')  Russian 
                  else if student.faculty == 'Education'
                    option(value='Adult Education')  Adult Education 
                    option(value='Business Education')  Business Education 
                    option(value='Early Childhood Education')  Early Childhood Education 
                    option(value='Education And Biology')  Education And Biology 
                    option(value='Education And Business Studies')  Education And Business Studies 
                    option(value='Education And Chemistry')  Education And Chemistry 
                    option(value='Education And Christian Religious Studies')  Education And Christian Religious Studies 
                    option(value='Education And Economics')  Education And Economics 
                    option(value='Education And English Language')  Education And English Language 
                    option(value='Education And French')  Education And French 
                    option(value='Education And Geography')  Education And Geography 
                    option(value='Education And History')  Education And History 
                    option(value='Education And Igbo')  Education And Igbo 
                    option(value='Education And Islamic Studies')  Education And Islamic Studies 
                    option(value='Education And Integrated Science')  Education And Integrated Science 
                    option(value='Education And Mathematics')  Education And Mathematics 
                    option(value='Education And Physics')  Education And Physics 
                    option(value='Education and Religious Studies')  Education and Religious Studies 
                    option(value='Education and Science')  Education and Science 
                    option(value='Education And Yoruba')  Education And Yoruba 
                    option(value='Educational Administration')  Educational Administration 
                    option(value='Educational Foundations')  Educational Foundations 
                    option(value='Guidance & Counselling')  Guidance & Counselling 
                    option(value='Home Economics And Education')  Home Economics And Education 
                    option(value='Human Kinetics')  Human Kinetics 
                    option(value='Technology Education')  Technology Education 
                  else if student.faculty == 'Engineering / Environmental Sciences'
                    option(value='Building')  Building 
                    option(value='Chemical Engineering')  Chemical Engineering 
                    option(value='Civil Engineering')  Civil Engineering 
                    option(value='Computer Engineering')  Computer Engineering 
                    option(value='Construction Management')  Construction Management 
                    option(value='Electrical /Electronics Engineering')  Electrical /Electronics Engineering 
                    option(value='Estate Management')  Estate Management 
                    option(value='Environmental Design')  Environmental Design 
                    option(value='Environmental Management')  Environmental Management 
                    option(value='Mechanical Engineering')  Mechanical Engineering 
                    option(value='Metallurgical And Materials Engineering')  Metallurgical And Materials Engineering 
                    option(value='Petroleum And Gas Engineering')  Petroleum And Gas Engineering 
                    option(value='Quantity Surveying')  Quantity Surveying 
                    option(value='Surveying And Geoinformatics')  Surveying And Geoinformatics 
                    option(value='Systems Engineering')  Systems Engineering 
                    option(value='Urban And Regional Planning')  Urban And Regional Planning 
                  else if student.faculty == 'Law / Legal Studies'
                    option(value='Commercial And Industrial law')  Commercial And Industrial law 
                    option(value='Conflict Management')  Conflict Management 
                    option(value='Dispute Resolution')  Dispute Resolution 
                    option(value='Jurisprudence And International Law')  Jurisprudence And International Law 
                    option(value='Legal Studies')  Legal Studies 
                    option(value='Private And Property Law')  Private And Property Law 
                    option(value='Public Law')  Public Law 
                  else if student.faculty == 'Medical / Health Sciences / Pharmacy'
                    option(value='Anaesthesia')  Anaesthesia 
                    option(value='Anatomy')  Anatomy 
                    option(value='Biomedical Engineering')  Biomedical Engineering 
                    option(value='Biopharmacy')  Biopharmacy 
                    option(value='Child Dental Health')  Child Dental Health 
                    option(value='Clinical Pathology')  Clinical Pathology 
                    option(value='Clinical Pharmacy')  Clinical Pharmacy 
                    option(value='Dentistry And Dental Surgery')  Dentistry And Dental Surgery 
                    option(value='Haematology And Blood Transfusion')  Haematology And Blood Transfusion 
                    option(value='Medical Laboratory Science')  Medical Laboratory Science 
                    option(value='Medical Microbiology and Parasitology')  Medical Microbiology and Parasitology 
                    option(value='Medicine And Surgery')  Medicine And Surgery 
                    option(value='Nursing / Nursing Science')  Nursing / Nursing Science 
                    option(value='Obstetrics / Gynaecology')  Obstetrics / Gynaecology 
                    option(value='Ophthalmology')  Ophthalmology 
                    option(value='Oral And Maxillofacial Surgery')  Oral And Maxillofacial Surgery 
                    option(value='Pediatrics')  Pediatrics 
                    option(value='Pharmacology')  Pharmacology 
                    option(value='Pharmacy')  Pharmacy 
                    option(value='Pharmacognosy')  Pharmacognosy 
                    option(value='Pharmaceutics And Pharmaceutical Technology')  Pharmaceutics And Pharmaceutical Technology 
                    option(value='Pharmaceutical Chemistry')  Pharmaceutical Chemistry 
                    option(value='Pharmaceutical Microbiology')  Pharmaceutical Microbiology 
                    option(value='Physiology')  Physiology 
                    option(value='Physiotherapy')  Physiotherapy 
                    option(value='Preventive Dentistry')  Preventive Dentistry 
                    option(value='Psychiatry')  Psychiatry 
                    option(value='Radiography')  Radiography 
                    option(value='Radiation Biology / Radiotherapy')  Radiation Biology / Radiotherapy 
                    option(value='Restorative Dentistry')  Restorative Dentistry 
                    option(value='Oral Pathology')  Oral Pathology 
                  else if student.faculty == 'Sciences'
                    option(value='Biochemistry')  Biochemistry 
                    option(value='Botany')  Botany 
                    option(value='Cell Biology And Genetics')  Cell Biology And Genetics 
                    option(value='Chemistry')  Chemistry 
                    option(value='Computer Science')  Computer Science 
                    option(value='Fisheries')  Fisheries 
                    option(value='Geology')  Geology 
                    option(value='Geophysics')  Geophysics 
                    option(value='Marine Biology')  Marine Biology 
                    option(value='Mathematics')  Mathematics 
                    option(value='Microbiology')  Microbiology 
                    option(value='Physics')  Physics 
                    option(value='Statistics')  Statistics 
                    option(value='Zoology')  Zoology 
                  else if student.faculty == 'Social Sciences'
                    option(value='Economics')  Economics 
                    option(value='Geography')  Geography 
                    option(value='Mass Communication')  Mass Communication 
                    option(value='Political Science')  Political Science 
                    option(value='Psychology')  Psychology 
                    option(value='Social Work')  Social Work 
                    option(value='Sociology')  Sociology 
              .form-group
                label(for='exampleFormControlSelect1') Level
                select#level.form-control(name = "level", data-value = student.level, required)
                  option 100
                  option 200
                  option 300
                  option 400
                  option 500
              .form-group
                label(for='total') Total Students
                input#total.form-control(placeholder='Class Total', name = "total", value = student.total, required, type = "number", max="200")
              .form-group
                label(for='rank') Stundent's Class Rank
                input#rank.form-control(placeholder='Student Rank', name = "rank", value = student.rank, required, type = "number", max="200")
              .form-group
                label(for='exampleFormControlSelect1') grade
                select#grade.form-control(name = "grade", data-value = student.grade)
                  option 1st Class
                  option 2nd Class upper
                  option 2nd Class lower
                  option 3rd Class
                  option Pass
              br
              button.btn.btn-primary(type='submit') Update Student Resource
          
              