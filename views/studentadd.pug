extends layout

block content
    link(type='text/css', rel='stylesheet', href='/studentadd.css')


    body
      nav.navbar.fixed-top.navbar-expand-lg.navbar-dark.bg-dark
        a.navbar-brand(href='/') ALC College
        button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarTogglerDemo02', aria-controls='navbarTogglerDemo02', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarTogglerDemo02.collapse.navbar-collapse
          ul.navbar-nav.mr-auto.mt-2.mt-lg-0
            li.nav-item
              a.nav-link(href='/')
                | Dashboard
                span.sr-only (current)
            li.nav-item.active
              a.nav-link(href='/student/add') Add Student
      .container
        h2 Add Student
        .row
          .col-md-10
            if errors
              div(class="alert alert-danger") #{errors[1].msg}
        .row
          .col-md-8
            form(method="POST", action="/student/add")
              .form-group
                label(for='firstname') Firstname
                input#firstname.form-control(placeholder='Firstname', name = "firstname", type="text", pattern="[a-zA-Z]+")
              .form-group
                label(for='lastname') Lastname
                input#lastname.form-control(placeholder='Lastname', name = "lastname", typr="text", pattern="[a-zA-Z]+")
              .form-group
                label(for='mobile') Mobile
                input#mobile.form-control(placeholder='234XXXXXXXXXX', name = "mobile",type='tel', pattern="[0-9]{13}")
              .form-group
                label(for='dob') Date of Birth 
                #datepicker.input-group.date(data-date-format='dd-mm-yyyy', data-provide="datepicker")
                  input#calendar-input.form-control(type='date', name='dob', placeholder='dd/mm/yyyy')
                  span.input-group-addon
                    i#calender.fa.fa-calendar(aria-hidden='true')
              .form-group
                label(for='email') Email
                input#email.form-control(placeholder='name@domain.com', name = "email", type="email")
              .form-group
                label(for='exampleFormControlSelect1') Gender
                select#exampleFormControlSelect1.form-control(name = "g")
                  option M
                  option F
              .form-group
                label Image
                small#emailHelp.form-text.text-muted Changing image will be available in latter versions
                input.form-control(type='text', placeholder='Readonly input hereâ€¦', readonly='', value = "https://ssl.prcdn.com/uk/people/default-profile.png?1406639312", name = "img")
              .form-group
                label(for='faculty') Faculty
                select#faculty.form-control(name = "faculty")
                  option Administration
                  option Arts And Humanities
                  option Education
                  option Engineering / Environmental Sciences
                  option Law / Legal Studies
                  option Medical / Health Sciences / Pharmacy
                  option Sciences
                  option Social Sciences
              .form-group
                label(for='dept') Department 
                select#dept.form-control(name = "dept")
                  option Accountancy / Accounting
                  option Actuarial Science
                  option Business Administration
                  option Finance
                  option Industrial Relations And Personnel Management
                  option Insurance
                  option Management
                  option Marketing
                  option Operations Research
              .form-group
                label(for='exampleFormControlSelect1') Level
                select#exampleFormControlSelect1.form-control(name = "level")
                  option 100
                  option 200
                  option 300
                  option 400
                  option 500
              .form-group
                label(for='total') Total Students
                input#total.form-control(placeholder='Total number in class', name = "total", type = "number", pattern="[0-9]{3}", max="200")
              .form-group
                label(for='rank') Stundent's Class Rank
                input#rank.form-control(placeholder='Student Rank', name = "rank", type = "number", pattern="[0-9]{3}", max="200")
              .form-group
                label(for='exampleFormControlSelect1') grade
                select#exampleFormControlSelect1.form-control(name = "grade")
                  option 1st Class
                  option 2nd Class upper
                  option 2nd Class lower
                  option 3rd Class
                  option Pass
              br
              button.btn.btn-primary(type='submit') Add Student Resource
          